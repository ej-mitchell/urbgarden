<!DOCTYPE html>
<html>
  <head>
    <title>Urbgarden</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <nav>
      <ul id="sign-in">
        <li id="title">UrbGarden</li>

        <li id="search">
          <%= form_tag(events_path, method: "get", id: "search-form") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search Events" %>
            <%= submit_tag "Search", name: nil, id: "search-submit" %>
          <% end %>
        </li>

        <li id="sign-in"><%= link_to 'Home', root_path, id: "sign-in-link" %></li>
        <% if user_signed_in? %>
          <li id="sign-in">
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, id: "sign-in-link" %>
            <%= link_to 'Profile', user_path(current_user), id: "sign-in-link" %>
          </li>
        <% else %>
          <li id="sign-in">
            <%= link_to 'Sign Up', new_user_registration_path, id: "sign-in-link" %>
          </li>
          <li id="sign-in">
            <%= link_to 'Sign In', new_user_session_path, id: "sign-in-link" %>
          </li>
        <% end %>
      <ul>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div id="app"></div>

    <%= yield %>
  </body>
</html>
