<%= form_for @event do |f| %>

<% if @event.errors.any? %>
    <div id="error_explanation-events">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="event-form">
    <%= f.label :name, 'Event Name' %>
    <%= f.text_field :name %>
  </div>

  <div class="event-form">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="event-form">
    <%= f.label :start_time, 'Start' %>
    <%= f.datetime_select :start_time, ampm: true%>


  </div>

  <div class="event-form">
    <%= f.label :end_time, 'End' %>
    <%= f.datetime_select :end_time, ampm: true%>
  </div>

  <div class="event-form">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="event-form">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class='row'>
    <%= f.label :state%>
    <%= f.select :state, @state_collection, selected: 'MA' %>
  </div>

  <div class="event-form">
    <%= f.label :event_url, 'Event URL' %>
    <%= f.text_field :event_url %>
  </div>

  <div class="event-form">
    <%= f.label :map_url, 'Map URL' %>
    <%= f.text_field :map_url %>
  </div>

  <div class="event-form-submit">
    <%= f.submit 'Add Event' %>
  </div>

<% end %>
