<%= form_for @event do |f| %>

<% if @event.errors.any? %>
    <div id="error_explanation-events">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <% @event.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>

    </div>
  <% end %>

  <div id="event-div">

  <div class="event-form">
    <%= f.label :name, 'Event Name' %> <br>
    <%= f.text_field :name %>
  </div>

  <div class="event-form">
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </div>

  <div class="event-form">
    <%= f.label :start_time, 'Start' %> <br>
    <%= f.datetime_select :start_time, ampm: true%>


  </div>

  <div class="event-form">
    <%= f.label :end_time, 'End' %> <br>
    <%= f.datetime_select :end_time, ampm: true%>
  </div>

  <div class="event-form">
    <%= f.label :address %> <br>
    <%= f.text_field :address %>
  </div>

  <div class="event-form">
    <%= f.label :city %> <br>
    <%= f.text_field :city %>
  </div>

  <div class='row'>
    <%= f.label :state %> <br>
    <%= f.select :state, @state_collection %>
  </div>

  <div class="event-form">
    <%= f.label :event_url, 'Event URL' %> <br>
    <%= f.text_field :event_url %>
  </div>

  <div class="event-form">
    <%= f.label :map_url, 'Map URL' %> <br>
    <%= f.text_field :map_url %>
  </div>

  <div class="event-form">
    <%= f.submit 'Add Event', class: "event-form-submit" %>
  </div>

<% end %>

</div>
